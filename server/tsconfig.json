 {
  "compilerOptions": {
    "target": "esnext",
    "strict": false,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module":"commonjs",
    "moduleResolution":"node",
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "isolatedModules": true, 
    "resolveJsonModule":true,
    "rootDir": "./",
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}